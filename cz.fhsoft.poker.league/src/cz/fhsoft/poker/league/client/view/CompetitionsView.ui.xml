<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.scrollable {
			overflow: auto;
			position: absolute;
			top: 30px;
			left: 5px;
			right: 5px;
			bottom: 10px;
			padding: 0px 5px;
		}

		.newLink {
			text-align: right;
			margin-right: 20px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label addStyleNames="pseudoLink, {style.newLink}" ui:field="newCompetition">Nová soutěž</g:Label>
		<g:FlowPanel ui:field="competitionsContainer" addStyleNames="{style.scrollable}"/>
	</g:FlowPanel>
</ui:UiBinder> 