<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.invitationsContainer {
			padding: 20px 20px 20px 50px;
			border: 1px solid #aaa;
		}

		.rankingContainer {
			padding: 20px 20px 20px 50px;
			border: 1px solid #aaa;
		}
		.gamesContainer {
			padding: 20px 20px 20px 50px;
			border: 1px solid #aaa;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label>Turnaj:</g:Label>
		<g:Label ui:field="name"/>
		<g:Label addStyleNames="pseudoLink" ui:field="edit">Upravit</g:Label>
		<g:Label addStyleNames="pseudoLink" ui:field="remove">Odstranit</g:Label>
		<g:Label addStyleNames="pseudoLink" ui:field="toggleShowInvitations">Zobrazit pozvánky</g:Label>
		<g:FlowPanel ui:field="invitationsContainer" addStyleNames="{style.invitationsContainer}"/>
		<g:Label addStyleNames="pseudoLink" ui:field="toggleShowRanking">Zobrazit výsledkovou tabulku</g:Label>
		<g:FlowPanel ui:field="rankingContainer" addStyleNames="{style.rankingContainer}"/>
		<g:Label addStyleNames="pseudoLink" ui:field="toggleShowGames">Zobrazit hry</g:Label>
		<g:FlowPanel ui:field="gamesContainer" addStyleNames="{style.gamesContainer}"/>
	</g:FlowPanel>
</ui:UiBinder> 