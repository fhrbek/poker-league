<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.gameTable {
			margin: auto;
			text-align: center;
		}
		
		.gameTable td {
			font-size: 16px;
		}
		
		.gameTable td label {
			font-size: 20px;
			padding-left: 5px;
		}
		
		@external .gwt-Label, .gwt-CheckBox;
		.gameTable .gwt-Label {
			padding: 2px;
			display: inline-block;
		}

		.gameTable .gwt-CheckBox, .gameTable .gwt-CheckBox input, .gameTable .gwt-CheckBox label {
			cursor: pointer;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="{style.gameTable}">
			<tr>
				<td verticalAlignment="middle">
					<g:FlowPanel>
						<g:Anchor href="#">Hlavní stránka</g:Anchor>
						<g:Label ui:field="noTournament">V tuto chvíli se nehraje žádný turnaj</g:Label>
						<g:FlowPanel ui:field="currentTournamentsContainer"/>
					</g:FlowPanel>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 